<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    android:layout_height="640dp"
    >

    <View
        android:layout_width="328dp"
        android:layout_height="461dp"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_alignParentBottom ="true"
        android:layout_marginBottom="195dp"
        android:background="@drawable/logo_background1"
        />


    <Button
        android:id="@+id/login"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginTop="419dp"
        android:background="@drawable/logo_button"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:onClick="onClick" />

    <TextView
        android:layout_width="214dp"
        android:layout_height="19dp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="503dp"
        android:text="소셜미디어 계정으로 로그인하기"
        android:textSize="14sp"
        />
    <Button
        android:id="@+id/signup_g"
        android:background="@drawable/google_button"
        android:layout_width="299dp"
        android:layout_height="33dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="539dp"
        android:layout_centerInParent="true"
        android:onClick="onClick" />
    <Button
        android:id="@+id/signup_f"
        android:layout_width="299dp"
        android:layout_height="33dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="584dp"
        android:background="@drawable/facebook_button"
        android:layout_centerInParent="true"
        android:onClick="onClick" />
</RelativeLayout>